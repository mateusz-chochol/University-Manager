@model UniversityManager.Models.Subject
@{
    ViewBag.Title = "Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2>Add subject</h2>
}
else
{
    <h2>Edit subject</h2>
}

@using (Html.BeginForm("Save", "Subjects"))
{
    @Html.ValidationSummary(true, "Please fix the following problems")
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Name)
    </div>
    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary">Save</button>
}